---
import BgVideo from './BgVideo.astro';
import HeaderContact from '../global/HeaderContact.astro';
import ReactButton from '../react/ReactButton.jsx';
---

<header>
  <BgVideo />
  <HeaderContact />
	<div class="logo">
		<img src="./images/logo-2.png" alt="logo" />
		<h2>Dominate Your Market</h2>
		<div class="buttons">
		</div>
		<ReactButton client:load>React Button!</ReactButton>
	</div>
</header>

<style>
	header {
		background-color: var(--color-transparent-black);
		color: var(--color-dark);
		height: 100vh;
		position: relative;
		text-align: center;
	}

	.logo {
		left: 50%;
		position: absolute;
		top: 50%;
		transform: translate(-50%, -50%);
		width: 100%;
	}
	img {
		display: block;
		margin: 0 auto;
		width: 30%;
		min-width: 380px;
	}
	h2 {
		color: var(--color-white);
	}
	.buttons {
		align-items: center;
		display: flex;
		justify-content: space-evenly;
		margin: 0 auto;
		width: 40%;
	}

	@media (max-width: 1100px) {
		.buttons {
			width: 90%;
		}
	}
</style>